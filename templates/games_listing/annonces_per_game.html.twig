{% extends 'base.html.twig' %}

{% block title %}Les Annonces pour
{{ jeu.titre }}
| Le Coin Gaming
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/zinedine/game_annonces_styles.css')}}">
{% endblock %}

{% block body %}

<div class="container d-flex">
	<div class="row">
		<div class="__game__image_container col-sm-12 col-lg-6">
			<img class="__game_image" src=" {{ asset(jeu.image) }} " />
		</div>

		<div class="__game_info col-lg-6">
			<div class="d-flex my-5">
				<h1 class="__game_title">
					{{ jeu.titre }}
				</h1>
				<p class="__game_date">({{ jeu.dateSortie|date('Y') }})</p>
			</div>

			<div class="__border_black mt-3"></div>
			<div class="__border_grey mb-3"></div>

			<div>
				<p class="__game_synopsis">Synopsis</p>
				<p class="__game_description">{{ jeu.description|nl2br }}</p>
			</div>
		</div>
	</div>
</div>

<div class="container-annonces">
	{% for a in annonces %}
	<a class="p-4" href=" {{ path('annonce_show', {id: a.id}) }} ">
		<div class="__game_annonce">
			<div class="__game_annonce_details">
				<div>
					<p class="font-weight-bold ml-5">{{ a.user.nom }}</p>
				</div>
				<div class="d-flex justify-content-between">
					<p class="font-weight-bold ml-5">{{ a.prix }} €</p>
					<p class="mr-5">Postée le : {{ a.createdAt|date('d - m - Y')}}</p>
				</div>
			</div>
			<p class="__game_show_annonce ml-5 text-white">Voir l'annonce <i class="fas fa-arrow-right ml-2"></i></p>
	</a>
</div>


<div class="__border_black mt-3"></div>
<div class="__border_grey mb-3"></div>
{% endfor %}
</div>

{% endblock %}

{% block javascripts %}
