{% extends 'base.html.twig' %}

{% block title %}Annonce | Le Coin Gaming{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/zinedine/game_annonces_styles.css')}}">
{% endblock %}


{% block body %}

<div class="containershowAnn">
    <div class="showAnn row">
        <div class="showAnnleft col-lg-6 col-sm-12">
            <h1 class="text-center ">{{ jeu.titre }}</h1>
            <div class="text-center  ">
                <img class="rounded" style="width:300px; height:400px" src="{{ asset(jeu.image) }}" alt="">
            </div>
        </div>
        <div class="showAnnright  col-lg-6 col-sm-12">
            <div>
                <h4 class="colorRef">Description: </h4>
                <p>{{ jeu.description }}</p>
            </div>
            <div class="d-flex justify-content-between">
                <p><span class="font-weight-bold colorRef">Prix : </span>{{ annonce.prix }} €</p>
                <p><span class="font-weight-bold colorRef">Date de publication : </span>{{ annonce.createdAt ?
                    annonce.createdAt|date('d-m-Y') : '' }}</p>
            </div>
            <p><span class="font-weight-bold colorRef ">Boite du jeu: </span>{{ annonce.boite ? 'Oui' : 'Non' }}</p>
            <div>
                <h4>Pour contacter le vendeur:</h4>
                <p><span class="font-weight-bold colorRef">Tél: </span> {{user.num}}</p>
                <p><span class="font-weight-bold colorRef">Mail: </span> {{user.email}} </p>
            </div>
            <a class="__show_button p-2 " href="{{ path('profil_annonce')}}">Retour aux annonces</a>
        </div>


 

    </div>

</div>

{% endblock %}