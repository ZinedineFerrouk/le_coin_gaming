{% extends 'base.html.twig' %}

{% block title %}Annonce | Le Coin Gaming{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/zinedine/game_annonces_styles.css')}}">
{% endblock %}


{% block body %}

<div class="containershowAnn">
    <div class="showAnn">
        <div class="showAnnleft">
            <h1 class="text-center ">{{ jeu.titre }}</h1>
            <div class="text-center  ">
                <img class="rounded" style="width:300px; height:400px" src="{{ asset(jeu.image) }}" alt="">
            </div>
        </div>
        <div class="showAnnright">
            <div>
                <h4>Description: </h4>
                <p>{{ jeu.description }}</p>
            </div>
            <div class="d-flex justify-content-between">
                <p><span class="font-weight-bold">Prix : </span>{{ annonce.prix }} €</p>
                <p><span class="font-weight-bold">Date de publication : </span>{{ annonce.createdAt ?
                    annonce.createdAt|date('d-m-Y') : '' }}</p>
            </div>
            <p><span class="font-weight-bold">Boite du jeu: </span>{{ annonce.boite ? 'Oui' : 'Non' }}</p>
            <div>
                <h4>Pour contacter le vendeur:</h4>
                <p><span class="font-weight-bold">Tél: </span> {{user.num}}</p>
                <p><span class="font-weight-bold">Mail: </span> {{user.email}} </p>
            </div>
        </div>


        <div class="text-center my-2">
            <a class="__show_button" href="{{ path('annonces_per_game', {id: jeu.id}) }}">Retour aux annonces</a>
        </div>

    </div>

</div>

{% endblock %}