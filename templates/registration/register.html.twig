{% extends 'base.html.twig' %}

{% block title %}Incription | Le Coin Gaming{% endblock %}

{% block body %}

<!-- Page Inscription -->
<div class="register">
    <div class="backRegis">
        
        <div class="formRegis">{% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1>Inscription</h1>
            <div class="formG">
                <div class="form1">{{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.pseudo) }}
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.num) }}
                    {{ form_row(registrationForm.agreeTerms, {
                    label: 'Accepter les termes'
                    }) }}
                    <button type="submit" class="btn">S'inscrire</button>
                </div>

                <div class="formRegis1">{{ form_row(registrationForm.age) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de Passe'
                    }) }}
                    
                    
                    {{ form_end(registrationForm) }}
                </div>
                
            </div>
        </div>
    </div>
</div>

{% endblock %}