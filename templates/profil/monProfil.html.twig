{% extends 'base.html.twig' %}

{% block title %}Mon profil | Le Coin Gaming{% endblock %}

{% block body %}
<div class="modifProf1">
    <div class="backModif">
        <div class="formModif">
            <h1 class="text-center">Modifier Mon Profil</h1>

            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row profilEd  justify-content-center mx-auto">
                <div class="col-12 col-md-6">
                    {{ form_row(form.pseudo) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.age) }}
                </div>
                <div class="col-12 ">
                    {{ form_row(form.num) }}
                </div>
                <button class="btn btn-success col-4 mr-2">{{ button_label|default('Enregistrer') }}</button>


                {{ form_end(form) }}

                <a href="{{ path('profil') }}" class="btnR btn col-4">Retour</a>
            </div>
        </div>

    </div>
</div>

{% endblock %}