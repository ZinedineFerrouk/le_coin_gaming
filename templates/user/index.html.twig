{% extends 'admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des Utilisateurs</h1>
    <a href="{{ path('user_new') }}" class="btn btn-primary ml-3 mb-2">Cr√©er un utilisateur</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>{# 
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th> #}
                <th>Pseudo</th>
                {# <th>Num</th> #}
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>{# 
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td> #}
                <td>{{ user.pseudo }}</td>
                {# <td>{{ user.num }}</td> #}
                <td>{{ user.age }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
